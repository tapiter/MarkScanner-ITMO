<resources>
    <!-- Base application theme. -->
    <style name="Theme.MarkScanner" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/top_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/top_bar</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/yellow</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- For text input fields -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="Theme.MainTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Widget.Material3.Button.IconButton" parent="Widget.Material3.Button.TextButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraSmall</item>
    </style>
</resources>